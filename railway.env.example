# Railway Environment Variables
# Copy this to Railway dashboard environment variables

NODE_ENV=production
PORT=3000

# Database (Railway will provide this automatically)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-railway
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-railway
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS (Update with your Lovable app URL)
CORS_ORIGIN=https://your-lovable-app.lovable.app

# Demo Mode
DEMO_MODE=true
DEMO_ONLY=false

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=info

# House Edge
DEFAULT_HOUSE_EDGE_BPS=200

# Faucet Limits (in smallest currency units)
FAUCET_DAILY_LIMIT_USDC=1000000000
FAUCET_DAILY_LIMIT_BTC=100000
FAUCET_DAILY_LIMIT_ETH=1000000000000000000
FAUCET_DAILY_LIMIT_SOL=1000000000
FAUCET_DAILY_LIMIT_USDT=1000000000
